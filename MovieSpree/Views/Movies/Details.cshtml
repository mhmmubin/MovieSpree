
@model MovieSpree.Models.Movie

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Released Date: @Model.ReleaseDate.ToLongDateString()</li>
    <li>Dated Added: @Model.DateAdded.ToLongDateString()</li>
    <li>Number In Stock: @Model.NumberInStock</li>
</ul>



